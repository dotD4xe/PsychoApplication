<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/application_navigation_gaph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.psychoapplication.ui.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_registrationFragment"
            app:destination="@id/LoginFragment"
            app:popUpTo="@+id/application_navigation_gaph"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/action_splashFragment_to_testFragment"
            app:destination="@id/testFragment"
            app:popUpTo="@+id/application_navigation_gaph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.example.psychoapplication.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/RegistrationFragment"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_loginFragment_to_testFragment"
            app:destination="@id/testFragment"
            app:popUpTo="@+id/application_navigation_gaph"
            app:popUpToInclusive="true"/>
        <argument
            android:name="email"
            app:argType="string"
            android:defaultValue="1"/>
    </fragment>
    <fragment
        android:id="@+id/RegistrationFragment"
        android:name="com.example.psychoapplication.ui.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_RegistrationFragment_to_testFragment"
            app:destination="@id/testFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/application_navigation_gaph"
            app:popUpToInclusive="true"/>
        <argument
            android:name="email"
            app:argType="string"
            android:defaultValue="1" />
        <action
            android:id="@+id/action_RegistrationFragment_to_LoginFragment"
            app:destination="@id/LoginFragment" />
    </fragment>
    <fragment
        android:id="@+id/testFragment"
        android:name="com.example.psychoapplication.ui.TestFragment"
        android:label="fragment_test"
        tools:layout="@layout/fragment_test" >
        <action
            android:id="@+id/action_testFragment_to_loginFragment"
            app:destination="@id/LoginFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/application_navigation_gaph"
            app:popUpToInclusive="true"/>
        <argument
            android:name="email"
            app:argType="string"
            android:defaultValue="1" />
    </fragment>
</navigation>