<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:padding="30dp"
tools:context=".ui.auth.LoginFragment">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/_icon__arrow_right_2_"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="1dp"
        />

<TextView
    android:id="@+id/twLogin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="120dp"
    android:text="Sign Up"
    android:textSize="30sp"
    android:textStyle="bold"
    android:textColor="@color/black"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="MissingConstraints" />

<TextView
    android:id="@+id/twMess"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp"
    android:text="You have chance to create new account if you really want to."
    android:textSize="18sp"
    android:gravity="center_horizontal"
    android:textStyle="normal"
    android:textColor="@color/black"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@id/twLogin"
    tools:ignore="MissingConstraints" />

<EditText
    android:id="@+id/name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="50dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/black_white_rect_bg"
    android:drawableStart="@drawable/_icon__user_square_"
    android:drawablePadding="15dp"
    android:ems="10"
    android:hint="Full name"
    android:inputType="textPersonName"
    android:minHeight="48dp"
    android:paddingStart="15dp"
    android:textColor="@color/black"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/twMess" />

    <EditText
        android:id="@+id/emailEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/black_white_rect_bg"
        android:drawableStart="@drawable/_icon__envelope_lines_thin_"
        android:drawablePadding="15dp"
        android:hint="Email address"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:paddingStart="15dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:ignore=",MissingConstraints" />

<EditText
    android:id="@+id/pass_et"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="Password"
    android:paddingStart="15dp"
    android:drawablePadding="15dp"
    android:drawableStart="@drawable/_ic_zamok"
    android:background="@drawable/black_white_rect_bg"
    android:inputType="textPassword"
    android:textColor="@color/black"
    android:textSize="16sp"
    tools:ignore=",MissingConstraints"
    app:layout_constraintEnd_toEndOf="@+id/emailEt"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="@+id/emailEt"
    app:layout_constraintTop_toBottomOf="@+id/emailEt"
    android:layout_marginTop="25dp"/>

<RelativeLayout
    android:id="@+id/button_layout"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    app:layout_constraintEnd_toEndOf="@+id/emailEt"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="@+id/emailEt"
    app:layout_constraintTop_toBottomOf="@+id/pass_et">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/black_rect_bg"
        android:text="Sign Up"
        app:cornerRadius="30dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:backgroundTint="@color/black" />

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:elevation="10dp"
        android:indeterminateTint="@color/white"
        android:visibility="invisible" />
</RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

